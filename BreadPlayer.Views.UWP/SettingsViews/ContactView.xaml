        <TextBlock Text="Contact me:" FontSize="22" FontWeight="Bold"/>
        <VariableSizedWrapGrid Orientation="Horizontal" Grid.Row="1">
            <RadioButton Content="Bug report" IsChecked="True" Command="{Binding Path=ChangeContactTypeCommand}" CommandParameter="Bug report"/>
            <RadioButton Content="Suggestion" Command="{Binding Path=ChangeContactTypeCommand}" CommandParameter="Suggestion"/>
            <RadioButton Content="Question" Command="{Binding Path=ChangeContactTypeCommand}" CommandParameter="Question"/>
            <RadioButton Content="Other" Command="{Binding Path=ChangeContactTypeCommand}" CommandParameter="Other"/>
            <RadioButton Content="Kudos" Command="{Binding Path=ChangeContactTypeCommand}" CommandParameter="Kudos"/>
        </VariableSizedWrapGrid>
        <RichEditBox Header="{Binding Path=ContentTitle, FallbackValue='Bug details:'}" PlaceholderText="Enter further details here..." MinHeight="200" Margin="0,0,0,10" Grid.Row="3" TextChanged="RichEditBox_TextChanged">
            <RichEditBox.HeaderTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" FontSize="18" FontWeight="SemiBold"/>
                </DataTemplate>
            </RichEditBox.HeaderTemplate>
        </RichEditBox>
        <Button Grid.Row="4" Command="{Binding Path=SendCommand}" Foreground="White" Background="{ThemeResource SystemControlBackgroundAccentBrush}" FontWeight="SemiBold" Style="{StaticResource DateTimePickerFlyoutButtonStyle}" Content="Send"/>

